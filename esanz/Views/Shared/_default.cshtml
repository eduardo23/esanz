        function msgAlerta(modal, title, mensaje)
        {
            if (modal) 
            {
                bootbox.confirm({
                    title: title,
                    message: mensaje,
                    buttons: {
                        confirm: {
                            label: 'Aceptar',
                            className: 'btn-primary'
                        },
                        cancel: {
                            label: 'Cancelar',
                            className: 'invisible'
                        },
                    },
                    callback: function (result) {
                    }
                });
            }
            else
            {
                bootbox.confirm({
                    title: title,
                    message: mensaje,
                    backdrop: true,
                    buttons: {
                        confirm: {
                            label: 'Aceptar',
                            className: 'btn-primary'
                        },
                        cancel: {
                            label: 'Cancelar',
                            className: 'invisible'
                        },
                    },
                    callback: function (result) {
                    }
                });
            }

        }

